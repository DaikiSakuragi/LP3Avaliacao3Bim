@model List<LP3Avaliacao3Bim.ViewModels.EstabelecimentoViewModel>

@{
    ViewData["Title"] = "Cadastro de Estabelecimentos";
}

<h1>Cadastre um Estabelecimento</h1>

<form method="post">
    <table>
		<tr>
			<td>Piso: </td>
			<td>
                <select name="piso" id="piso">
                    <option value="Piso 1">Piso 1</option>
                    <option value="Piso 2">Piso 2</option>
                    <option value="Piso 3">Piso 3</option>
                </select>
            </td>
		</tr>

        <tr>
			<td>Nome: </td>
			<td><input type="text" name="nome" placeholder="Digite o nome do estabelecimento"></td>
		</tr>

        <tr>
			<td>Descrição: </td>
			<td> <textarea name="descricao" cols="30" rows="1"></textarea></td>
		</tr>

		<tr>
			<td>Tipo do Estabelecimento: </td>
			<td>
                <select name="tipoestabelecimento" id="tipoestabelecimento">
                    <option value="Loja">Loja</option>
                    <option value="Kiosque">Kiosque</option>
                </select>
            </td>
		</tr>

        <tr>
			<td>Email: </td>
			<td><input type="email" name="email" placeholder="Digite o email de contato do estabelecimento"></td>
		</tr>

        <tr>
			<td><button type="submit">Concluir</button></td>
		</tr>
	</table>
</form>
